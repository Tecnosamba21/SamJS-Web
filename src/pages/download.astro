---
import Logo from "../components/Logo.astro";
import Layout from "../layouts/Layout.astro";
import Aside from "../components/Aside.astro";
import "../styles/global.css";
---

<Layout title="Download SamJS ">
    <Aside isDownload={true} />
    <main class="flex flex-col gap-5 items-center justify-center py-20">
        <h1 class="text-4xl font-bold">Download SamJS</h1>
        <span>Download the latest version of SamJS for your OS</span>
    </main>

    <div class="max-w-md mx-auto p-2">
        <details
            class="group border border-neutral-700 rounded-sm text-white shadow-md overflow-hidden transition-all duration-300"
        >
            <summary
                class="cursor-pointer select-none text-lg font-semibold p-4 flex items-center justify-between"
            >
                <span>Installers</span>
                <span
                    class="transition-transform duration-300 group-open:rotate-90"
                    >></span
                >
            </summary>
            
            <div class="space-y-4 p-4">
                <div
                    class="flex items-center justify-between bg-neutral-800 rounded-lg p-3"
                >
                    <span class="flex items-center gap-2"
                        ><img src="/windows.svg" alt="Windows installer">Windows
                    </span>
                    <a href="https://" class="border-b border-white text-sm">Download</a>
                </div>

                <div
                    class="flex items-center justify-between bg-neutral-800 rounded-lg p-3"
                >
                    <span class="flex items-center gap-2"
                        ><img src="/macos.svg" alt="MacOS installer">MacOS (universal)
                    </span>
                    <a class="rounded-sm p-1 text-sm cursor-not-allowed">Coming soon...</a>
                </div>


                <div
                    class="flex items-center justify-between bg-neutral-800 rounded-lg p-3"
                >
                    <span class="flex items-center gap-2"
                        ><img src="/linux.svg" alt="Linux installer (.deb)">Linux (<code>.deb</code>)
                    </span>
                    <a class="rounded-sm p-1 text-sm cursor-not-allowed">Coming soon...</a>
                </div>
            </div>
        </details>
    </div>
</Layout>
